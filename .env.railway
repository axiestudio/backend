# Railway Environment Configuration for Axie Studio Backend
# Copy these variables to your Railway project environment variables

# Core Application Settings
AXIESTUDIO_HOST=0.0.0.0
AXIESTUDIO_PORT=$PORT
AXIESTUDIO_BACKEND_ONLY=true
AXIESTUDIO_LOG_LEVEL=info
AXIESTUDIO_WORKERS=1

# Authentication & Security
AXIESTUDIO_AUTO_LOGIN=false
AXIESTUDIO_SUPERUSER=admin
AXIESTUDIO_SUPERUSER_PASSWORD=admin123
AXIESTUDIO_SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration
# Railway will provide DATABASE_URL automatically if you add a PostgreSQL service
AXIESTUDIO_DATABASE_URL=$DATABASE_URL
AXIESTUDIO_DATABASE_CONNECTION_RETRY=true
AXIESTUDIO_POOL_SIZE=10
AXIESTUDIO_MAX_OVERFLOW=20

# Redis Configuration (optional)
# Railway will provide REDIS_URL automatically if you add a Redis service
AXIESTUDIO_REDIS_URL=$REDIS_URL
AXIESTUDIO_REDIS_CACHE_EXPIRE=3600

# Performance & Monitoring
AXIESTUDIO_PROMETHEUS_ENABLED=false
AXIESTUDIO_SENTRY_DSN=

# File Storage
AXIESTUDIO_STORAGE_TYPE=local

# Disable features not needed in production
AXIESTUDIO_OPEN_BROWSER=false
AXIESTUDIO_DEV=false
AXIESTUDIO_AUTO_SAVING=true

# Logging
AXIESTUDIO_LOG_FILE=
AXIESTUDIO_ALEMBIC_LOG_FILE=

# MCP Server (if needed)
AXIESTUDIO_MCP_SERVER_ENABLED=false

# Celery (if needed)
AXIESTUDIO_CELERY_ENABLED=false
